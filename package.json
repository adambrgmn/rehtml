{
  "name": "rehtml",
  "version": "0.3.0",
  "description": "Transform HTML to React components without danger",
  "main": "dist/rehtml.js",
  "umd:main": "dist/rehtml.umd.js",
  "module": "dist/rehtml.esm.js",
  "source": "src/index.ts",
  "files": [
    "dist/**"
  ],
  "keywords": [
    "react",
    "html-to-react"
  ],
  "repository": "git@github.com:adambrgmn/rehtml.git",
  "author": "Adam Bergman <adam@fransvilhelm.com>",
  "license": "MIT",
  "scripts": {
    "build": "microbundle --target web --no-sourcemap",
    "dev": "microbundle watch --target web --no-compress",
    "test": "jest",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@types/jest": "^24.0.1",
    "@types/parse5": "^5.0.0",
    "@types/react": "^16.8.2",
    "@types/react-dom": "^16.8.0",
    "@typescript-eslint/eslint-plugin": "^1.3.0",
    "@typescript-eslint/parser": "^1.3.0",
    "babel-eslint": "^10.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-react-app": "^3.0.7",
    "eslint-plugin-flowtype": "^3.2.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-dom": "^3.1.1",
    "lint-staged": "^8.1.3",
    "microbundle": "^0.9.0",
    "prettier": "^1.16.4",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-testing-library": "^5.6.1",
    "semantic-release": "^15.13.3",
    "ts-jest": "^23.10.5",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "parse5": "^5.1.0"
  },
  "peerDependencies": {
    "react": "^16.*"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "concurrent": true,
    "linters": {
      "*.{js,ts,jsx,tsx}": [
        "eslint --fix",
        "prettier --write",
        "git add"
      ],
      "*.{json,css,scss,md,mdx,yml}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  }
}
